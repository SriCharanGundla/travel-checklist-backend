# Server
NODE_ENV=development
PORT=5000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=travel_checklist
DB_USER=postgres
DB_PASSWORD=your_password
SKIP_DB_MIGRATIONS=false
RUN_DB_SEEDS=false

# Database SSL (for production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false
DB_SSL_CA=

# PgAdmin (Optional - for database management)
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin123

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_refresh_token_secret_key_change_in_production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# App
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5000

# Password reset links
PASSWORD_RESET_BASE_URL=http://localhost:3000

# Collaborator invites
COLLABORATOR_INVITE_BASE_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
DATA_PROTECTION_KEY=base64_encoded_32_byte_key

# Document vault
DOCUMENT_VAULT_SIGNING_SECRET=
DOCUMENT_VAULT_ALLOWED_HOSTS=files.example.com
DOCUMENT_VAULT_LINK_TTL_SECONDS=300
DOCUMENT_VAULT_DOWNLOAD_BASE_URL=
DOCUMENT_VAULT_REQUIRE_HTTPS=true
DOCUMENT_VAULT_MAX_URL_LENGTH=2048

# Email (Gmail SMTP)
GMAIL_SMTP_USER=your_gmail_address@gmail.com
GMAIL_SMTP_PASS=your_app_password
EMAIL_FROM="Travel Checklist <your_gmail_address@gmail.com>"

# Optional SMTP overrides (only change if not using Gmail defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
